<%= form_for(setup_home(@home), html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @home.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@home.errors.count, "error") %> prohibited this home from being saved:</h4>

      <ul>
        <% @home.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
      <ul>
        <% @home.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :description, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group field">
    <%= f.label "Main Image", class: "col-sm-2 control-label" %>
    <%= f.attachment_field :main_image %><br />
  </div>

  <div class="form-group field form-inline">
    <%= f.label "Additional Images (optional)", class: "col-sm-2 control-label" %>
    <%= f.attachment_field :additional_image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :address, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :beds, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :beds, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :baths, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :baths, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :square_footage, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :square_footage, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :price, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :price, class: "form-control" %>
    </div>
  </div>


  <div class="form-control">
    Add some Links:
  </div>
  <br>

  <%= f.fields_for :links do |ff| %>
    <div class="form-group">
      <%= ff.label :url, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= ff.text_field :url, class: "form-control" %>
      </div>
      <%= ff.label :description, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= ff.text_field :description, class: "form-control" %>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
