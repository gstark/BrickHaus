<div class="page-header">
  <%= link_to new_home_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Home
  <% end %>
  <h1>Listing homes</h1>
</div>

<%= form_tag homes_path, method: "get" do %>
  <label> Square Footage Min</label>
  <%= number_field_tag "search[square_footage][min]"%>
  <label>Square Footage Max</label>
  <%= number_field_tag "search[square_footage][max]"%>
  <label>Beds Min</label>
  <%= number_field_tag "search[beds][min]"%>
  <label> Beds Max</label>
  <%= number_field_tag "search[beds][max]"%>
  <%= submit_tag("Search") %>
<% end %>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Address</th>
        <th>Beds</th>
        <th>Baths</th>
        <th>Square footage</th>
        <th>Price</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <%- @homes.each do |home| %>
      <tr>
        <td><%= home.address %></td>
        <td><%= home.beds %></td>
        <td><%= home.baths %></td>
        <td><%= home.square_footage %></td>
        <td><%= home.price %></td>
        <td><%= home.description %></td>
        <td>
          <%= link_to home do %>
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to edit_home_path(home) do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to home, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
