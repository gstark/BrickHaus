<div class="container">
  <div class="page-header">
    <%= link_to new_home_path, class: 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
      New Home
    <% end %>
    <h1>Listing homes</h1>
  </div>

  <div id="myCarousel" class="carousel slide">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>

      <% @homes.each do |home| %>
        <li data-target="#myCarousel" data-slide-to="<%= home.id %>"></li>
      <% end %>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
      <% @homes.each.with_index do |home, i| %>
        <div data-index="<%= i %>" class="item <%= i == 0 ? "active": "" %>">
          <%= attachment_image_tag(home, :main_image) %>
          <div class="carousel-caption"><h4><%= home.address %></h4></div>
        </div>
      <% end %>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <br><br>

  <%= form_tag homes_path, class: "form-inline", method: "get" do %>
    <div class="form-group">
      <label> Price Min</label>
      <%= number_field_tag "search[price][min]", class: "form-control" %>
    </div>
    <div class="form-group">
      <label> Price Max</label>
      <%= number_field_tag "search[price][max]", class: "form-control" %>
    </div>
    <div class="form-group">
      <label> Square Ft Min</label>
      <%= number_field_tag "search[square_footage][min]", class: "form-control" %>
    </div>
    <div class="form-group">
      <label> Square Ft Max</label>
      <%= number_field_tag "search[square_footage][max]", class: "form-control" %>
    </div>
    <div class="form-group">
      <label> Beds Min</label>
      <%= number_field_tag "search[beds][min]", class: "form-control" %>
    </div>
    <div class="form-group">
      <label> Beds Max</label>
      <%= number_field_tag "search[beds][max]", class: "form-control" %>
    </div>
    <div class="form-group">
      <label> Baths Min</label>
      <%= number_field_tag "search[baths][min]", class: "form-control" %>
    </div>
    <div class="form-group">
      <label> Baths Max</label>
      <%= number_field_tag "search[baths][max]", class: "form-control" %>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-default">Submit</button>
      </div>
    </div>
  <% end %>
  <div class="table-responsive container">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Address</th>
          <th>Beds</th>
          <th>Baths</th>
          <th>Square footage</th>
          <th>Price</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <%- @homes.each.with_index do |home, index| %>
        <tr class="<%= index == 0 ? "hovered" : "" %>">
          <td><%= home.address %></td>
          <td><%= home.beds %></td>
          <td><%= home.baths %></td>
          <td><%= home.square_footage %></td>
          <td><%= number_to_currency(home.price) %></td>
          <td><%= home.description.truncate_words(15) %></td>
          <td>
            <%= link_to home do %>
              <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
            <% end %>
          </td>
          <td>
            <%= link_to edit_home_path(home) do %>
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            <% end %>
          </td>
          <td>
            <%= link_to home, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
