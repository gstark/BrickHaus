<div class="container">
  <div class="page-header">
    <%= link_to homes_path, class: 'btn btn-default' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Back
    <% end %>
    <%= link_to edit_home_path(@home), class: 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-pencil"></span>
      Edit
    <% end %>
    <h2><%= @home.address %></h2>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <div class="row">
        <div class="col-xs-8 col-sm-6">
          <%= image_tag attachment_url(@home, :main_image) %>
          <h3><%= @home.beds %> Bedrooms, <%= @home.baths %> bathrooms</h3>
        </div>
        <div class="col-xs-4 col-sm-6">
          <% if @home.additional_image %>
          <%= image_tag attachment_url(@home, :additional_image) %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-9">
      <h4><%= @home.square_footage %> square feet and only $<%= @home.price %></h4>
    </div>
  </div>
  <p><%= @home.description %></p>

        <% if @home.owner %>
        <dt>Owner:</dt>
        <dd><%= @home.owner.name %></dd>
        <%else%>
        <dt>associated agent</dt>
        <dd>Agent's info to follow</dd>
        <% end %>
</div>

<%= image_tag attachment_url(@home, :main_image) %><br>

<% if @home.additional_image %>
<%= image_tag attachment_url(@home, :additional_image) %>
<% end %>

<dl class="dl-horizontal">
  <dt>Address:</dt>
  <dd><%= @home.address %></dd>

  <dt>Beds:</dt>
  <dd><%= @home.beds %></dd>

  <dt>Baths:</dt>
  <dd><%= @home.baths %></dd>

  <dt>Square footage:</dt>
  <dd><%= @home.square_footage %></dd>

  <dt>Price:</dt>
  <dd><%= @home.price %></dd>

  <dt>Description:</dt>
  <dd><%= @home.description %></dd>

  <% unless @home.links.empty? %>
    <dt>Links:</dt>
    <% @home.links.each do |link| %>
      <dd><%= link.description %></dd>
    <% end %>
  <% end %>


  <% if @home.owner %>
  <dt>Owner:</dt>
  <dd><%= @home.owner.name %></dd>
  <%else%>
  <dt>Owner</dt>
  <dd>None??</dd>
  <% end %>

</dl>
