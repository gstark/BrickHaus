<div class="page-header">
  <%= link_to homes_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_home_path(@home), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show home</h1>
</div>

<%= image_tag attachment_url(@home, :main_image) %><br>
<%= image_tag attachment_url(@home, :additional_image) %>

<dl class="dl-horizontal">
  <dt>Address:</dt>
  <dd><%= @home.address %></dd>

  <dt>Beds:</dt>
  <dd><%= @home.beds %></dd>

  <dt>Baths:</dt>
  <dd><%= @home.baths %></dd>

  <dt>Square footage:</dt>
  <dd><%= @home.square_footage %></dd>

  <dt>Price:</dt>
  <dd><%= @home.price %></dd>

  <dt>Description:</dt>
  <dd><%= @home.description %></dd>

</dl>
