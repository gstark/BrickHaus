<div class="container">
  <h1><%= @user.name %>'s Profile</h1>

  <p>
    <%= attachment_image_tag(@user, :profile_image, size: "300x300", fallback: "silhouette.png") %>
  </p>

  <p>
    <strong>Email:</strong> <%= @user.email %>
  </p>

  <p>
    <strong>Phone:</strong> <%= @user.phone %>
  </p>

  <p>
    <strong>Address:</strong> <%= @user.address %>
  </p>

  <button class="btn btn-default"><%= link_to "Edit", edit_user_registration_path %></button>
</div>
